{
    "$id": "user",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Please Enter your Username and Password",
    "title": "Account",
    "$comment": "~",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "format": "email"
        },
        "password": {
            "type": "string",
            "writeOnly": true,
            "minLength": 8
        }
    },
    "required": [
        "email",
        "password"
    ]
}